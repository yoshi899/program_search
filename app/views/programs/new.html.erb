<div class="search">
    <div class="row">
      <div class="col-xs-offset-3 col-xs-6">
        <div class="panel panel-default">
          <div class="panel-heading">番組検索</div>
          <div class="panel-body">
            <%= form_for(:program, url: new_program_path, html: { method: :get, class: 'form-inline' }) do |f| %>
              <div class="form-group">
                <%= f.label :area, "地域" %><br>
                <%= f.select :area, [["東京", "130"], ["名古屋", "230"], ["大阪", "270"], ["福岡", "400"]],class: 'form-control' %>
              </div>
    
              <div class="form-group">
                <%= f.label :service, 'チャンネル', class:'control-label' %><br>
                <%= f.select :service, [["NHK総合1", "g1"], ["NHK Eテレ1", "e1"], ["NHK BS1", "s1"], ["NHK BSプレミアム", "s3"]] ,class: 'form-control' %>
              </div>
    
              <div class="form-group">
                <%= f.label :genre, 'ジャンル', class:'control-label' %><br>
                <%= f.select :genre, [["ニュース/報道", "0000"], ["スポーツ", "0100"], ["情報/ワイドショー", "0205"], ["ドラマ", "0300"]] ,class: 'form-control' %>
              </div>
    
              <div class="form-group">
                <%= f.label :date, '日付', class:'control-label' %><br>
                <%= f.select :date, [["今日", Date.today] ,["明日", (Date.today + 1)]],class: 'form-control' %>
              </div>
    
              <div class="text-right">
                <%= f.submit '検索する', class: 'btn btn-success' %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
</div>
<%= render 'programs', programs: @programs %>
